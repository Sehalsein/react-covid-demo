{
    "name": "react-frontend",
    "version": "1.2.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start -p ${PORT:=3000}",
        "lint": "tsc && next lint",
        "lighthouse:desktop": "lighthouse http://localhost:3000/ --headless --preset=desktop --view --output html --output-path ./lighthouse.html",
        "lighthouse:mobile": "lighthouse http://localhost:3000/ --headless --preset=desktop --view --output html --output-path ./lighthouse.html",
        "prepare": "husky install",
        "commit": "clear && git-cz",
        "prettier": "prettier --config .prettierrc --write",
        "analyze": "cross-env NODE_ENV=development ANALYZE=true next build",
        "analyze:server": "cross-env NODE_ENV=development BUNDLE_ANALYZE=server next build",
        "analyze:browser": "cross-env NODE_ENV=development BUNDLE_ANALYZE=browser next build"
    },
    "dependencies": {
        "axios": "^0.26.1",
        "chart.js": "^3.7.1",
        "d3-scale": "^4.0.2",
        "date-fns": "^2.28.0",
        "next": "^12.1.4",
        "react": "18.0.0",
        "react-chartjs-2": "^4.1.0",
        "react-dom": "18.0.0",
        "react-simple-maps": "^2.3.0",
        "react-spring": "^9.4.4",
        "react-tooltip": "^4.2.21",
        "swr": "^1.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@next/bundle-analyzer": "^12.1.4",
        "@types/d3-scale": "^4.0.2",
        "@types/faker": "^6.6.8",
        "@types/react": "18.0.1",
        "@types/react-simple-maps": "^1.0.8",
        "autoprefixer": "^10.4.4",
        "cross-env": "^7.0.3",
        "eslint": "8.13.0",
        "eslint-config-next": "12.1.4",
        "faker": "^6.6.6",
        "git-cz": "^4.8.0",
        "husky": "^7.0.4",
        "lighthouse": "^9.5.0",
        "lint-staged": "^12.3.7",
        "postcss": "^8.4.12",
        "prettier": "^2.6.2",
        "prettier-plugin-tailwindcss": "^0.1.10",
        "tailwindcss": "^3.0.23",
        "typescript": "4.6.3"
    },
    "lint-staged": {
        "./**/*.{js,ts,tsx}": [
            "npm run prettier",
            "npm run lint"
        ]
    }
}
